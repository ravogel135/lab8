<div class="container mt-5">
  <h1 class="text-center mb-4">¡Bienvenido!</h1>

  <p class="lead text-center">Elige hacia dónde quieres dirigirte</p>

  <div class="row justify-content-center">
    <div class="col-md-3">
      <div class="card text-center shadow-sm mb-4">
        <div class="card-body">
          <%= link_to 'Items', items_path, class: 'btn btn-block btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card text-center shadow-sm mb-4">
        <div class="card-body">
          <%= link_to 'Dishes', dishes_path, class: 'btn btn-block btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card text-center shadow-sm mb-4">
        <div class="card-body">
          <%= link_to 'Restaurants', restaurants_path, class: 'btn btn-block btn-primary' %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <h2 class="text-center mb-4">Los restaurantes con mayor cantidad de elementos:</h2>
    </div>
    <% top_restaurants = Restaurant.all.sort_by { |restaurant| -restaurant.items.count }.first(3) %>
    <% top_restaurants.each do |restaurant| %>
      <div class="col-sm-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text">Dirección: <%= restaurant.address %></p>
            <p class="card-text">Número de elementos: <%= restaurant.items.count %></p>
          </div>
          <div class="card-footer text-center">
            <% restaurant.items.each do |item| %>
              <%= link_to item.name, item, class: "btn btn-primary mr-2 mb-2" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
















