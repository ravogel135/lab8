<div class="container">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="dish-container">
    <%= render @dish %>
  </div>

  <div class="nav-links text-center mt-4">
    <%= link_to "Edit this dish", edit_dish_path(@dish), class: "btn btn-primary mr-2" %>
    <%= link_to "Back to dishes", dishes_path, class: "btn btn-secondary ml-2" %>
    <%= button_to "Destroy this dish", @dish, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger ml-2" %>
  </div>
</div>

