<div class="container">
  <div class="alert alert-success" role="alert" style="margin-top: 20px; color: #155724; background-color: #d4edda;">
    <%= notice %>
  </div>

  <div class="mt-5">
    <h1 class="text-center mb-4" style="color: #000;">Restaurants</h1>

    <div id="restaurants" class="row">
      <% @restaurants.each do |restaurant| %>
        <div class="col-sm-12 col-md-6 col-lg-4">
          <div class="card mb-4" style="border-color: #007BFF;">
            <div class="card-body" style="color: #000;">
              <p class="card-text">Name: <%= restaurant.name %></p>
              <p class="card-text">Address: <%= restaurant.address %></p>
            </div>
            <div class="card-footer text-center">
              <%= link_to "Show this restaurant", restaurant, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-5">
    <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-success" %>
  </div>
</div>

