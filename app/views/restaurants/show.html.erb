<div class="container">
  <div class="alert alert-success mt-4" role="alert">
    <%= notice %>
  </div>

  <div class="mt-4">
    <div class="card">
      <div class="card-body">
        <%= render @restaurant %>
      </div>
      <div class="card-footer d-flex justify-content-between align-items-center">
        <div>
          <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %> 
          <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-secondary" %>
        </div>
        <div>
          <%= button_to "Destroy this restaurant", @restaurant, method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

